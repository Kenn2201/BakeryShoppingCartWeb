    list-style-type: none;
    padding-left: 0;
    margin-bottom: 0;
  }

  .order-item {
    padding: 10px 0;
    border-top: 1px solid #ccc;
  }

  .product-name {
    margin: 0;
    font-size: 18px;
    font-weight: bold;
    color: #333;
  }

  .price {
    margin: 5px 0;
    font-size: 16px;
    color: #555;
  }

  .view-history-btn {
    margin-top: 10px;
    background-color: #333;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .view-history-btn:hover {
    background-color: #555;
  }

  .view-history-btn:focus {
    outline: none;
  }

  /* Add more custom CSS styles as needed */

</style>

